---
/*
  BaseLayout.astro - The foundation for all pages

  This is an Astro Layout component. Think of it like a template that wraps your pages.
  It provides the HTML structure, head tags, and imports global styles.

  Props (data passed to this component):
  - title: The page title (shows in browser tab and search engines)
  - description: Page description for SEO (optional)
*/

// TypeScript interface defines what props this component accepts
interface Props {
  title: string;
  description?: string; // The ? means this is optional
}

// Destructure props - this is how Astro accesses data passed to the component
const {
  title,
  description = "Level up your gaming experience with Tricky P Gaming" // Default description if none provided
} = Astro.props;

// Import Header and Footer components
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Import space/nebula background components
import SpaceBackground from '../components/SpaceBackground.astro';
import StarField from '../components/StarField.astro';
import NebulaGlow from '../components/NebulaGlow.astro';
import FloatingParticles from '../components/FloatingParticles.tsx';
import ShootingStars from '../components/ShootingStars.tsx';
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Character encoding - tells browser how to read the text -->
    <meta charset="UTF-8" />

    <!-- Responsive design - makes site work on mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO Meta Tags -->
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph meta tags - for social media sharing (Facebook, Discord, etc.) -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Twitter Card meta tags - for Twitter sharing -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Favicon - the little icon in the browser tab -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Page title - shows in browser tab and bookmarks -->
    <title>{title}</title>

    <!-- Import our global styles - this makes our colors and styles available -->
    <style is:global>
      @import '../styles/global.css';
    </style>
  </head>

  <body>
    <!-- Space/Nebula Background Layers (furthest back) -->
    <SpaceBackground />
    <NebulaGlow />
    <StarField />

    <!-- Floating Particle Effects (React components with client directives) -->
    <FloatingParticles client:load />
    <ShootingStars client:idle />

    <!-- Header component - appears on every page -->
    <Header />

    <!-- Main content area -->
    <main>
      <!--
        The <slot /> is where the page content goes.
        When you use this layout in a page, that page's content replaces <slot />

        Think of it like:
        <BaseLayout title="Home">
          <h1>Welcome</h1> <- This content goes in the slot
        </BaseLayout>
      -->
      <slot />
    </main>

    <!-- Footer component - appears on every page -->
    <Footer />
  </body>
</html>

<!--
  How this works:

  1. When you create a page (like index.astro), you import this layout
  2. You wrap your page content with this layout
  3. Astro takes your content and puts it where the <slot /> is
  4. The result is a complete HTML page with proper structure

  Example usage in a page:
  ---
  import BaseLayout from '../layouts/BaseLayout.astro';
  ---
  <BaseLayout title="Home">
    <h1>My content here!</h1>
  </BaseLayout>
-->
