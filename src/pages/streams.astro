---
import BaseLayout from '../layouts/BaseLayout.astro';
import VideoCard from '../components/VideoCard.astro';
import StreamSchedule from '../components/StreamSchedule.tsx';
import LiveIndicator from '../components/LiveIndicator.tsx';
import { videos, featuredVideo, recentStreams, youtubeVideos, highlights } from '../data/videos';

const pageTitle = 'Streams & Videos';
const pageDescription = 'Watch live streams, VODs, and highlights from Tricky P Gaming. Catch the latest gameplay, speedruns, and community events.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <div class="min-h-screen bg-gradient-to-b from-gray-900 via-purple-900/20 to-gray-900">
    <!-- Hero Section -->
    <section class="relative py-20 px-4">
      <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-10"></div>
      <div class="absolute inset-0 bg-gradient-to-b from-purple-900/0 via-purple-900/20 to-gray-900"></div>

      <div class="max-w-7xl mx-auto relative z-10">
        <div class="text-center mb-12">
          <h1 class="text-5xl md:text-7xl font-bold mb-6">
            <span class="bg-gradient-to-r from-purple-400 via-pink-400 to-purple-400 bg-clip-text text-transparent">
              Streams & Videos
            </span>
          </h1>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto">
            Catch the latest live streams, VODs, and highlights. Join the community for epic gameplay,
            speedruns, and viewer challenges!
          </p>
        </div>

        <!-- Live Indicator -->
        <div class="mb-12">
          <LiveIndicator
            client:visible
            isLive={false}
            viewerCount={1247}
            streamTitle="Epic Speedrun Marathon - Going for World Record!"
            game="Celeste"
          />
        </div>

        <!-- Featured Video -->
        <div class="mb-16">
          <h2 class="text-3xl font-bold text-white mb-6 flex items-center gap-3">
            <svg class="w-8 h-8 text-purple-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            Featured Content
          </h2>
          <div class="max-w-4xl">
            <VideoCard {...featuredVideo} />
          </div>
        </div>
      </div>
    </section>

    <!-- Tabbed Content Section -->
    <section class="py-16 px-4">
      <div class="max-w-7xl mx-auto">
        <div class="bg-gray-900/50 backdrop-blur-sm rounded-2xl border border-gray-800 p-8">
          <!-- Tab Navigation -->
          <div class="flex flex-wrap gap-2 mb-8 border-b border-gray-800 pb-4" role="tablist">
            <button class="tab-button active px-6 py-3 font-semibold rounded-lg transition-all" data-tab="recent">
              Recent Streams
            </button>
            <button class="tab-button px-6 py-3 font-semibold rounded-lg transition-all" data-tab="youtube">
              YouTube Videos
            </button>
            <button class="tab-button px-6 py-3 font-semibold rounded-lg transition-all" data-tab="highlights">
              Highlights
            </button>
            <button class="tab-button px-6 py-3 font-semibold rounded-lg transition-all" data-tab="schedule">
              Stream Schedule
            </button>
          </div>

          <!-- Tab Content -->
          <div class="tab-content active" data-content="recent">
            <div class="mb-6">
              <h3 class="text-2xl font-bold text-white mb-2">Recent Twitch Streams</h3>
              <p class="text-gray-400">Latest VODs and stream highlights from Twitch</p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
              {recentStreams.map((video) => (
                <VideoCard {...video} />
              ))}
            </div>
            <div class="mt-8 text-center">
              <a
                href="https://twitch.tv/trickyp"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 bg-purple-600 hover:bg-purple-700 text-white font-bold px-8 py-3 rounded-lg transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M11.571 4.714h1.715v5.143H11.57zm4.715 0H18v5.143h-1.714zM6 0L1.714 4.286v15.428h5.143V24l4.286-4.286h3.428L22.286 12V0zm14.571 11.143l-3.428 3.428h-3.429l-3 3v-3H6.857V1.714h13.714Z"/>
                </svg>
                View All on Twitch
              </a>
            </div>
          </div>

          <div class="tab-content" data-content="youtube">
            <div class="mb-6">
              <h3 class="text-2xl font-bold text-white mb-2">YouTube Videos</h3>
              <p class="text-gray-400">Edited highlights, guides, and gameplay videos</p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
              {youtubeVideos.map((video) => (
                <VideoCard {...video} />
              ))}
            </div>
            <div class="mt-8 text-center">
              <a
                href="https://youtube.com/@trickyp"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 bg-red-600 hover:bg-red-700 text-white font-bold px-8 py-3 rounded-lg transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
                View All on YouTube
              </a>
            </div>
          </div>

          <div class="tab-content" data-content="highlights">
            <div class="mb-6">
              <h3 class="text-2xl font-bold text-white mb-2">Top Highlights</h3>
              <p class="text-gray-400">Best moments and must-watch content</p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
              {highlights.map((video) => (
                <VideoCard {...video} />
              ))}
            </div>
          </div>

          <div class="tab-content" data-content="schedule">
            <StreamSchedule client:load />
          </div>
        </div>
      </div>
    </section>

    <!-- Platform Stats -->
    <section class="py-16 px-4">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-gradient-to-br from-purple-900/40 to-purple-900/20 border border-purple-500/30 rounded-xl p-8 text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-purple-600 rounded-full mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M11.571 4.714h1.715v5.143H11.57zm4.715 0H18v5.143h-1.714zM6 0L1.714 4.286v15.428h5.143V24l4.286-4.286h3.428L22.286 12V0zm14.571 11.143l-3.428 3.428h-3.429l-3 3v-3H6.857V1.714h13.714Z"/>
              </svg>
            </div>
            <h3 class="text-3xl font-bold text-white mb-2">250K+</h3>
            <p class="text-gray-300 font-semibold mb-1">Twitch Followers</p>
            <p class="text-gray-400 text-sm">Live streams 5 days/week</p>
          </div>

          <div class="bg-gradient-to-br from-red-900/40 to-red-900/20 border border-red-500/30 rounded-xl p-8 text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-red-600 rounded-full mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </div>
            <h3 class="text-3xl font-bold text-white mb-2">500K+</h3>
            <p class="text-gray-300 font-semibold mb-1">YouTube Subscribers</p>
            <p class="text-gray-400 text-sm">Weekly video uploads</p>
          </div>

          <div class="bg-gradient-to-br from-pink-900/40 to-pink-900/20 border border-pink-500/30 rounded-xl p-8 text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-pink-600 rounded-full mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"/>
              </svg>
            </div>
            <h3 class="text-3xl font-bold text-white mb-2">5M+</h3>
            <p class="text-gray-300 font-semibold mb-1">Total Views</p>
            <p class="text-gray-400 text-sm">Across all platforms</p>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .tab-button {
    @apply text-gray-400 bg-gray-800/50 hover:bg-gray-800 hover:text-white;
  }

  .tab-button.active {
    @apply bg-gradient-to-r from-purple-600 to-pink-600 text-white;
  }

  .tab-content {
    @apply hidden;
  }

  .tab-content.active {
    @apply block;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabButtons = document.querySelectorAll('.tab-button');
    const tabContents = document.querySelectorAll('.tab-content');

    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        const tabId = button.getAttribute('data-tab');

        // Remove active class from all buttons and contents
        tabButtons.forEach(btn => btn.classList.remove('active'));
        tabContents.forEach(content => content.classList.remove('active'));

        // Add active class to clicked button and corresponding content
        button.classList.add('active');
        const activeContent = document.querySelector(`[data-content="${tabId}"]`);
        if (activeContent) {
          activeContent.classList.add('active');
        }
      });
    });
  });
</script>
