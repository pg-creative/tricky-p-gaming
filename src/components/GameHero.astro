---
/**
 * GameHero Component
 * Immersive full-screen hero section for individual game pages
 * Dynamic gradient background based on game's color scheme
 */

interface Props {
  title: string;
  genre: string[];
  platforms: string[];
  rating: number;
  playTime: number;
  releaseYear: number;
  colorScheme: {
    primary: string;
    secondary: string;
    accent: string;
  };
}

const {
  title,
  genre,
  platforms,
  rating,
  playTime,
  releaseYear,
  colorScheme
} = Astro.props;
---

<div class="game-hero" style={`--hero-primary: ${colorScheme.primary}; --hero-secondary: ${colorScheme.secondary}; --hero-accent: ${colorScheme.accent};`}>
  <!-- Animated Background Layers -->
  <div class="hero-background">
    <div class="gradient-layer"></div>
    <div class="glow-orb orb-1"></div>
    <div class="glow-orb orb-2"></div>
    <div class="glow-orb orb-3"></div>
  </div>

  <!-- Hero Content -->
  <div class="hero-content">
    <div class="container">
      <!-- Game Logo/Title -->
      <div class="hero-title-section">
        <h1 class="hero-title">{title}</h1>
        <div class="hero-subtitle">
          <span class="release-year">{releaseYear}</span>
        </div>
      </div>

      <!-- Genre Tags -->
      <div class="hero-tags">
        {genre.map(g => (
          <span class="hero-tag">{g}</span>
        ))}
      </div>

      <!-- Platform Icons -->
      <div class="hero-platforms">
        {platforms.map(platform => (
          <span class="platform-badge">{platform}</span>
        ))}
      </div>

      <!-- Quick Stats Bar -->
      <div class="hero-stats">
        <div class="hero-stat">
          <div class="stat-icon">‚≠ê</div>
          <div class="stat-info">
            <div class="stat-value">{rating}/10</div>
            <div class="stat-label">Rating</div>
          </div>
        </div>
        <div class="hero-stat">
          <div class="stat-icon">‚è±Ô∏è</div>
          <div class="stat-info">
            <div class="stat-value">{playTime}h</div>
            <div class="stat-label">Playtime</div>
          </div>
        </div>
        <div class="hero-stat">
          <div class="stat-icon">üìÖ</div>
          <div class="stat-info">
            <div class="stat-value">{releaseYear}</div>
            <div class="stat-label">Released</div>
          </div>
        </div>
      </div>

      <!-- Call-to-Actions -->
      <div class="hero-actions">
        <a href="#review" class="hero-btn primary">Read My Review</a>
        <a href="#playthrough" class="hero-btn secondary">Watch Playthrough</a>
      </div>

      <!-- Scroll Indicator -->
      <div class="scroll-indicator">
        <span class="scroll-text">Scroll to Explore</span>
        <div class="scroll-icon">‚Üì</div>
      </div>
    </div>
  </div>
</div>

<style>
  .game-hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: var(--spacing-2xl) 0;
  }

  /* Background Layers */
  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .gradient-layer {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse at center,
      color-mix(in srgb, var(--hero-primary) 40%, transparent) 0%,
      color-mix(in srgb, var(--hero-secondary) 30%, transparent) 40%,
      var(--bg-primary) 100%
    );
    animation: pulse 8s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.85; }
  }

  /* Glowing Orbs */
  .glow-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
    animation: float 20s ease-in-out infinite;
  }

  .orb-1 {
    width: 400px;
    height: 400px;
    background: var(--hero-primary);
    top: 10%;
    left: 10%;
    animation-delay: 0s;
  }

  .orb-2 {
    width: 500px;
    height: 500px;
    background: var(--hero-secondary);
    bottom: 10%;
    right: 15%;
    animation-delay: 5s;
  }

  .orb-3 {
    width: 350px;
    height: 350px;
    background: var(--hero-accent);
    top: 50%;
    right: 20%;
    animation-delay: 10s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -30px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  /* Hero Content */
  .hero-content {
    position: relative;
    z-index: 1;
    width: 100%;
    text-align: center;
  }

  .hero-title-section {
    margin-bottom: var(--spacing-xl);
    animation: fadeInUp 1s ease-out;
  }

  .hero-title {
    font-size: clamp(3rem, 10vw, 6rem);
    font-weight: 900;
    margin-bottom: var(--spacing-sm);
    background: linear-gradient(
      135deg,
      var(--hero-primary),
      var(--hero-accent),
      var(--hero-secondary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 0 40px var(--hero-accent));
    letter-spacing: -0.02em;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.5rem);
    color: var(--text-secondary);
  }

  .release-year {
    color: var(--hero-accent);
    font-weight: 700;
  }

  /* Tags and Platforms */
  .hero-tags {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-lg);
    animation: fadeInUp 1s ease-out 0.2s both;
  }

  .hero-tag {
    padding: 0.5rem 1.25rem;
    background: color-mix(in srgb, var(--hero-primary) 25%, transparent);
    border: 2px solid var(--hero-primary);
    border-radius: var(--radius-full);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    box-shadow: 0 0 20px color-mix(in srgb, var(--hero-primary) 30%, transparent);
  }

  .hero-platforms {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-xl);
    animation: fadeInUp 1s ease-out 0.3s both;
  }

  .platform-badge {
    padding: 0.375rem 1rem;
    background: color-mix(in srgb, var(--hero-accent) 20%, transparent);
    border: 1px solid var(--hero-accent);
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--hero-accent);
  }

  /* Stats Bar */
  .hero-stats {
    display: flex;
    justify-content: center;
    gap: var(--spacing-2xl);
    margin-bottom: var(--spacing-2xl);
    padding: var(--spacing-xl);
    background: color-mix(in srgb, var(--bg-surface) 60%, transparent);
    border: 1px solid color-mix(in srgb, var(--hero-primary) 30%, transparent);
    border-radius: var(--radius-lg);
    backdrop-filter: blur(10px);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    animation: fadeInUp 1s ease-out 0.4s both;
  }

  .hero-stat {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .stat-icon {
    font-size: 2rem;
  }

  .stat-info {
    text-align: left;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--hero-accent);
    line-height: 1;
    margin-bottom: 0.25rem;
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Action Buttons */
  .hero-actions {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-2xl);
    animation: fadeInUp 1s ease-out 0.5s both;
    flex-wrap: wrap;
  }

  .hero-btn {
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 700;
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all var(--transition-normal);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .hero-btn.primary {
    background: var(--hero-accent);
    color: var(--bg-primary);
    border: 2px solid var(--hero-accent);
    box-shadow: 0 0 30px color-mix(in srgb, var(--hero-accent) 40%, transparent);
  }

  .hero-btn.primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 50px color-mix(in srgb, var(--hero-accent) 60%, transparent);
  }

  .hero-btn.secondary {
    background: transparent;
    color: var(--hero-accent);
    border: 2px solid var(--hero-accent);
  }

  .hero-btn.secondary:hover {
    background: color-mix(in srgb, var(--hero-accent) 20%, transparent);
    transform: translateY(-2px);
  }

  /* Scroll Indicator */
  .scroll-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-sm);
    animation: fadeInUp 1s ease-out 0.6s both;
  }

  .scroll-text {
    font-size: 0.75rem;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .scroll-icon {
    font-size: 1.5rem;
    color: var(--hero-accent);
    animation: bounce 2s ease-in-out infinite;
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(10px);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .game-hero {
      min-height: 90vh;
      padding: var(--spacing-xl) 0;
    }

    .hero-stats {
      flex-direction: column;
      gap: var(--spacing-lg);
      padding: var(--spacing-lg);
    }

    .hero-stat {
      justify-content: center;
    }

    .stat-info {
      text-align: center;
    }

    .hero-actions {
      flex-direction: column;
      align-items: stretch;
      padding: 0 var(--spacing-md);
    }

    .orb-1, .orb-2, .orb-3 {
      width: 250px;
      height: 250px;
    }
  }
</style>
