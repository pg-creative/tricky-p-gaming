---
/**
 * NebulaGlow Component
 * Large, soft gradient orbs that create atmospheric depth
 * Pure CSS animation - no JavaScript required
 */
---

<div class="nebula-container">
  <div class="nebula-orb nebula-orb-1"></div>
  <div class="nebula-orb nebula-orb-2"></div>
  <div class="nebula-orb nebula-orb-3"></div>
  <div class="nebula-orb nebula-orb-4"></div>
  <div class="nebula-orb nebula-orb-5"></div>
</div>

<style>
  .nebula-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }

  .nebula-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
    will-change: transform, opacity;
    mix-blend-mode: screen;
  }

  /* Purple nebula - top left */
  .nebula-orb-1 {
    width: 600px;
    height: 600px;
    background: radial-gradient(
      circle,
      rgba(147, 51, 234, 0.6) 0%,
      rgba(126, 34, 206, 0.4) 30%,
      rgba(88, 28, 135, 0.2) 60%,
      transparent 100%
    );
    top: -200px;
    left: -200px;
    animation: float-1 20s ease-in-out infinite;
  }

  /* Blue nebula - top right */
  .nebula-orb-2 {
    width: 500px;
    height: 500px;
    background: radial-gradient(
      circle,
      rgba(59, 130, 246, 0.6) 0%,
      rgba(37, 99, 235, 0.4) 30%,
      rgba(29, 78, 216, 0.2) 60%,
      transparent 100%
    );
    top: -100px;
    right: -150px;
    animation: float-2 25s ease-in-out infinite;
  }

  /* Cyan nebula - center */
  .nebula-orb-3 {
    width: 700px;
    height: 700px;
    background: radial-gradient(
      circle,
      rgba(34, 211, 238, 0.5) 0%,
      rgba(6, 182, 212, 0.3) 30%,
      rgba(8, 145, 178, 0.2) 60%,
      transparent 100%
    );
    top: 30%;
    left: 40%;
    animation: float-3 30s ease-in-out infinite;
  }

  /* Purple-blue nebula - bottom left */
  .nebula-orb-4 {
    width: 550px;
    height: 550px;
    background: radial-gradient(
      circle,
      rgba(109, 40, 217, 0.6) 0%,
      rgba(79, 70, 229, 0.4) 30%,
      rgba(67, 56, 202, 0.2) 60%,
      transparent 100%
    );
    bottom: -150px;
    left: 10%;
    animation: float-4 22s ease-in-out infinite;
  }

  /* Cyan-blue nebula - bottom right */
  .nebula-orb-5 {
    width: 650px;
    height: 650px;
    background: radial-gradient(
      circle,
      rgba(6, 182, 212, 0.6) 0%,
      rgba(14, 165, 233, 0.4) 30%,
      rgba(2, 132, 199, 0.2) 60%,
      transparent 100%
    );
    bottom: -200px;
    right: -100px;
    animation: float-5 28s ease-in-out infinite;
  }

  /* Floating animations with subtle movement and pulsing */
  @keyframes float-1 {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.4;
    }
    33% {
      transform: translate(50px, 80px) scale(1.1);
      opacity: 0.5;
    }
    66% {
      transform: translate(-30px, 40px) scale(0.95);
      opacity: 0.35;
    }
  }

  @keyframes float-2 {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.4;
    }
    33% {
      transform: translate(-60px, 60px) scale(1.05);
      opacity: 0.45;
    }
    66% {
      transform: translate(40px, -30px) scale(0.9);
      opacity: 0.3;
    }
  }

  @keyframes float-3 {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.35;
    }
    25% {
      transform: translate(70px, -50px) scale(1.15);
      opacity: 0.45;
    }
    50% {
      transform: translate(-40px, 60px) scale(0.95);
      opacity: 0.3;
    }
    75% {
      transform: translate(30px, 30px) scale(1.05);
      opacity: 0.4;
    }
  }

  @keyframes float-4 {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.4;
    }
    33% {
      transform: translate(80px, -40px) scale(1.1);
      opacity: 0.5;
    }
    66% {
      transform: translate(-50px, 20px) scale(0.9);
      opacity: 0.35;
    }
  }

  @keyframes float-5 {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.4;
    }
    33% {
      transform: translate(-70px, -60px) scale(1.08);
      opacity: 0.48;
    }
    66% {
      transform: translate(50px, 40px) scale(0.92);
      opacity: 0.32;
    }
  }

  /* Disable animations for users who prefer reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .nebula-orb {
      animation: none;
    }
  }

  /* Adjust orb sizes for smaller screens */
  @media (max-width: 768px) {
    .nebula-orb-1 {
      width: 400px;
      height: 400px;
    }
    .nebula-orb-2 {
      width: 350px;
      height: 350px;
    }
    .nebula-orb-3 {
      width: 450px;
      height: 450px;
    }
    .nebula-orb-4 {
      width: 400px;
      height: 400px;
    }
    .nebula-orb-5 {
      width: 420px;
      height: 420px;
    }
  }
</style>
