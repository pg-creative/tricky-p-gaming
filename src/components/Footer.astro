<style>
  /*
    Footer Styles
    Uses CSS variables from global.css for brand consistency
  */

  .site-footer {
    /* Background slightly lighter than main background for visual separation */
    background-color: var(--bg-surface);

    /* Cyan accent border at top */
    border-top: 2px solid var(--accent-cyan);

    /* Spacing from content above */
    margin-top: var(--spacing-2xl);

    /* Footer padding */
    padding: var(--spacing-2xl) 0 var(--spacing-lg) 0;
  }

  .footer-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  .footer-content {
    /* Three-column grid layout on desktop */
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-xl);
  }

  .footer-section {
    /* Each column */
  }

  .footer-heading {
    color: var(--text-primary);
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--spacing-md);

    /* Gradient text for gaming aesthetic */
    background: linear-gradient(135deg, var(--accent-cyan), var(--accent-purple));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Social Links */
  .social-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    color: var(--text-secondary);
    text-decoration: none;
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-md);
    transition: all var(--transition-normal);
  }

  .social-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0; /* Prevent icon from shrinking */
  }

  /* Hover effects with glow */
  .social-link:hover {
    color: var(--accent-cyan);
    background-color: rgba(0, 217, 255, 0.1);
    box-shadow: 0 0 15px rgba(0, 217, 255, 0.3);
    transform: translateX(4px);
  }

  /* Footer Navigation Links */
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .footer-link {
    color: var(--text-secondary);
    text-decoration: none;
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-md);
    transition: all var(--transition-normal);
    display: inline-block;
  }

  .footer-link:hover {
    color: var(--accent-purple);
    background-color: rgba(157, 78, 221, 0.1);
    box-shadow: 0 0 15px rgba(157, 78, 221, 0.3);
    transform: translateX(4px);
  }

  /* Footer Description and Copyright */
  .footer-description {
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: var(--spacing-md);
  }

  .copyright {
    color: var(--text-secondary);
    font-size: 0.875rem;
    line-height: 1.6;
    margin-top: var(--spacing-md);
  }

  /*
    Responsive Design - Mobile/Tablet
    Stack columns on smaller screens for better readability
  */
  @media (max-width: 992px) {
    /* Two columns on tablet */
    .footer-content {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-lg);
    }

    /* Last section spans both columns */
    .footer-section:last-child {
      grid-column: 1 / -1;
    }
  }

  @media (max-width: 640px) {
    /* Single column on mobile */
    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    /* Reset last section span */
    .footer-section:last-child {
      grid-column: auto;
    }

    /* Adjust spacing for mobile */
    .site-footer {
      margin-top: var(--spacing-xl);
      padding: var(--spacing-xl) 0 var(--spacing-md) 0;
    }

    /* Center text on mobile for better appearance */
    .footer-section {
      text-align: center;
    }

    /* Center social links on mobile */
    .social-links {
      align-items: center;
    }

    .social-link {
      justify-content: center;
    }

    /* Center footer links */
    .footer-links {
      align-items: center;
    }

    /* No transform on mobile (looks odd when centered) */
    .social-link:hover,
    .footer-link:hover {
      transform: none;
    }
  }

  /* Focus styles for accessibility */
  .social-link:focus,
  .footer-link:focus {
    outline: 2px solid var(--accent-cyan);
    outline-offset: 2px;
  }
</style>
