---
/*
  RecentReviews.astro - Horizontal Scrolling Review Carousel

  Features:
  - Horizontal scrolling carousel
  - Review cards with game image, title, rating, quote
  - Smooth scroll behavior
  - Links to full reviews
*/

interface Review {
  game: string;
  rating: number;
  quote: string;
  icon: string;
  gradientFrom: string;
  gradientTo: string;
  url: string;
}

const recentReviews: Review[] = [
