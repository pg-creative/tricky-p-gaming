  BlogPreview.astro - Latest Articles Section

  Grid showcase of recent blog posts with:
  - Thumbnail images
  - Title, excerpt, date, category
  - Hover effects with image zoom
  - Links to full blog posts
*/

interface BlogPost {
  title: string;
  excerpt: string;
  date: string;
  category: string;
  categoryColor: string;
  thumbnail: string;
  url: string;
}

// Recent blog posts - placeholder data
