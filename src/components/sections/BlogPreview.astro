---

<section class="blog-preview-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Latest Articles</h2>
      <p class="section-subtitle">Deep dives, guides, and gaming thoughts</p>
      <a href="/blog" class="view-all-link">
        View All Articles
        <span class="arrow">‚Üí</span>
      </a>
    </div>

    <div class="blog-grid">
      {recentPosts.map((post) => (
        <article class="blog-card">
          <a href={post.url} class="card-link">
            {/* Thumbnail */}
            <div class="blog-thumbnail">
              <div class="thumbnail-icon">{post.thumbnail}</div>
              <div class="thumbnail-overlay">
                <span class="read-more">Read More ‚Üí</span>
              </div>
            </div>

            {/* Content */}
            <div class="blog-content">
              <div class="blog-meta">
                <span class="blog-category" style={`color: ${post.categoryColor}`}>
                  {post.category}
                </span>
                <span class="blog-date">{post.date}</span>
              </div>

              <h3 class="blog-title">{post.title}</h3>
              <p class="blog-excerpt">{post.excerpt}</p>
            </div>
          </a>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .blog-preview-section {
    padding: var(--spacing-2xl) 0;
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(20, 27, 61, 0.3),
      transparent
    );
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
    position: relative;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3rem);
    background: linear-gradient(135deg, var(--text-primary), var(--accent-purple));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--spacing-sm);
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-lg);
  }

  .view-all-link {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    color: var(--accent-cyan);
    font-weight: 600;
    font-size: 1.1rem;
    padding: var(--spacing-sm) var(--spacing-lg);
    border: 2px solid var(--accent-cyan);
    border-radius: 50px;
    transition: all var(--transition-normal);
  }

  .view-all-link:hover {
    background: var(--accent-cyan);
    color: var(--bg-primary);
    box-shadow: 0 0 20px rgba(0, 217, 255, 0.5);
    transform: translateY(-2px);
  }

  .view-all-link .arrow {
    transition: transform var(--transition-normal);
  }

  .view-all-link:hover .arrow {
    transform: translateX(5px);
  }

  /* Blog Grid */
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-xl);
  }

  /* Blog Card */
  .blog-card {
    background: var(--bg-surface);
    border: 2px solid rgba(0, 217, 255, 0.2);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-normal);
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
  }

  .blog-card:hover {
    transform: translateY(-10px);
    border-color: rgba(0, 217, 255, 0.5);
    box-shadow:
      0 0 30px rgba(0, 217, 255, 0.3),
      0 15px 40px rgba(0, 0, 0, 0.5);
  }

  .card-link {
    display: block;
    color: inherit;
    text-decoration: none;
  }

  /* Thumbnail Section */
  .blog-thumbnail {
    position: relative;
    height: 200px;
    background: linear-gradient(135deg, rgba(0, 217, 255, 0.1), rgba(157, 78, 221, 0.1));
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .thumbnail-icon {
    font-size: 5rem;
    filter: drop-shadow(0 0 20px rgba(0, 217, 255, 0.5));
    transition: transform var(--transition-normal);
    z-index: 1;
  }

  .blog-card:hover .thumbnail-icon {
    transform: scale(1.2);
  }

  .thumbnail-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0, 217, 255, 0.8), rgba(157, 78, 221, 0.8));
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .blog-card:hover .thumbnail-overlay {
    opacity: 1;
  }

  .read-more {
    color: white;
    font-weight: 700;
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* Content Section */
  .blog-content {
    padding: var(--spacing-lg);
  }

  .blog-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-md);
    font-size: 0.85rem;
  }

  .blog-category {
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .blog-date {
    color: var(--text-secondary);
  }

  .blog-title {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: var(--spacing-sm);
    line-height: 1.3;
    transition: color var(--transition-fast);
  }

  .blog-card:hover .blog-title {
    color: var(--accent-cyan);
  }

  .blog-excerpt {
    color: var(--text-secondary);
    line-height: 1.6;
    font-size: 0.95rem;
    margin: 0;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .blog-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .blog-thumbnail {
      height: 180px;
    }

    .thumbnail-icon {
      font-size: 4rem;
    }
  }

  @media (max-width: 480px) {
    .blog-content {
      padding: var(--spacing-md);
    }

    .blog-title {
      font-size: 1.25rem;
    }

    .thumbnail-icon {
      font-size: 3rem;
    }
  }
</style>
