<style>
  /* Section spacing and layout */
  .games-showcase {
    background-color: var(--bg-primary);
  }

  /* Section heading - centered with gradient effect */
  .section-heading {
    text-align: center;
    margin-bottom: var(--spacing-xl);
    background: linear-gradient(135deg, var(--accent-cyan), var(--accent-purple));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* CSS Grid Layout
     Creates a responsive grid that adapts to screen size
     - Desktop: 3 columns
     - Tablet: 2 columns
     - Mobile: 1 column
  */
  .games-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 3 equal columns on desktop */
    gap: var(--spacing-lg);
    width: 100%;
  }

  /* Tablet breakpoint - 2 columns */
  @media (max-width: 768px) {
    .games-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-md);
    }

    .section-heading {
      margin-bottom: var(--spacing-lg);
    }
  }

  /* Mobile breakpoint - 1 column (stack vertically) */
  @media (max-width: 480px) {
    .games-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }

    .section-heading {
      margin-bottom: var(--spacing-md);
    }
  }
</style>
